<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="100%" 
		 height="100%"
		 verticalGap="0"
		 creationComplete="init()" xmlns:component="common.component.*">
	<component:ControlBar id="controlBar" width="100%" height="38" modelName="故障类型管理" imgName="oper"/>
	<mx:Tree id="treeFuncFault"
			 x="0" 
			 y="0" 
			 width="100%" 
			 height="100%" 
			 rowHeight="20"
			 labelField="@name"
			 iconFunction="iconFunction" 
			 dataProvider="{_treeXML}"
			 itemRollOver="{lastRollIndex = event.rowIndex}" borderStyle="strokeWidth:1px;"
			 itemClick="tree_itemClick(event)"/>
		<mx:RemoteObject id="roFuncMgr" 
						destination="faultSimulation"
						showBusyCursor="true"
						endpoint="{ModelLocator.END_POINT}"
						result="funcResult(event)"/>
	<mx:Script source="../actionscript/FaultTypeManager.as"/>
</mx:VBox>