<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="294" height="170" 
				fontSize="12" title="提示"
				showCloseButton="true" close="{PopUpManager.removePopUp(this)}">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
		]]>
	</mx:Script>
	<mx:Grid width="100%" height="100%" verticalGap="8" horizontalGap="0">
		<mx:GridRow width="100%">
			<mx:GridItem width="125" height="100%">
				<mx:Label id="usage_description" text="时隙使用率颜色说明："/>
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%">
			<mx:GridItem width="107" height="100%" horizontalAlign="center">
				<mx:HBox backgroundColor="0x006400" backgroundSize="60%" width="36" height="100%"/>
			</mx:GridItem>
			<mx:GridItem width="80%">
				<mx:Label text="绿色代表0%-30%" />
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%">
			<mx:GridItem width="107" height="100%" horizontalAlign="center">
				<mx:HBox backgroundColor="0xFC7905" backgroundSize="60%" width="36" height="100%"/>
			</mx:GridItem>
			<mx:GridItem width="80%">
				<mx:Label text=" 橙色代表30%-70%" />
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow width="100%">
			<mx:GridItem width="107" height="100%" horizontalAlign="center">
				<mx:HBox backgroundColor="0xFF0000" backgroundSize="60%" width="36" height="100%"/>
			</mx:GridItem>
			<mx:GridItem width="80%">
				<mx:Label text="红色代表70%~100%" />
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>
</mx:TitleWindow>
